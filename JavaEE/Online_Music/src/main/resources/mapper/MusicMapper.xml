<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.online_music.dao.MusicMapper">
    <insert id="addMusic">
        insert into music (title,singer,time,url,userId)values (#{title},#{singer},#{time},#{url},#{userId})
    </insert>

    <delete id="deleteMusic">
        delete from music where id=#{id}
    </delete>

    <select id="findAllMusic" resultType="com.example.online_music.model.Music">
        select * from music;
    </select>
    <select id="findMusicById" resultType="com.example.online_music.model.Music">
        select * from music where id = #{id}
    </select>
    <select id="ifMusic" resultType="com.example.online_music.model.Music">
        select * from music where title like concat('%',#{name},'%');
    </select>

</mapper>